{
    "include": [
        "src/ts/**/*.ts",
        "src/test/**/*.spec.ts"
    ],
    "exclude": [
        "node_modules",
        "_dist",
        "_compressed",
        "_cache"
    ],
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "es2017",
        "lib": ["es5", "es6", "esnext", "es2017"],
        "outDir": "_dist/es5",
        "rootDir": "./src",
        "module": "es2015",
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "inlineSources": true,
        "typeRoots": ["node_modules/@types"],
        "listEmittedFiles": true,
        "noEmitOnError": true
    }
}
